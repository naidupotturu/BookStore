<p id="notice"><%= notice %></p>

<h1>Book</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Release date</th>
      <th>Description</th>
      <th>Downloads</th>
      <th>Rated times</th>
      <th>Author</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.rating %></td>
        <td><%= book.release_date %></td>
        <td><%= book.description %></td>
        <td><%= book.downloads %></td>
        <td><%= book.rated_times %></td>
        <td><%= book.author %></td>
        <td><%= book.version %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
